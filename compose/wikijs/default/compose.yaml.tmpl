services:
  wikijs:
    image: ${IMAGE_NAME:-requarks/wiki}:${TAG:-2}
    container_name: wikijs
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    environment:
      - TZ=UTC
      - DB_TYPE=sqlite
      - DB_FILEPATH=/data/wiki.sqlite
    ports:
      - "3000:3000"
    volumes:
      - ${MNT_DIR}/data/wikijs:/data
      - ${MNT_DIR}/config/wikijs:/config
    healthcheck:
      test: ["CMD", "wget", "-q", "-O", "-", "http://localhost:3000"]
      interval: 30s
      timeout: 10s
      retries: 5
    networks:
      - vnet-frontend
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
  vnet-backend:
    external: true
