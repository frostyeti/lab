services:
  keycloak:
    image: ${IMAGE_NAME:-quay.io/keycloak/keycloak}:${TAG:-latest}
    container_name: keycloak
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    environment:
      - TZ=UTC
    ports:
      - "8080:8080"
    command: ["start-dev"]
    volumes:
      - ${MNT_DIR}/data/keycloak:/data
      - ${MNT_DIR}/config/keycloak:/config
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/"]
      interval: 30s
      timeout: 10s
      retries: 5
    networks:
      - vnet-frontend
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
  vnet-backend:
    external: true
