imports:
  - docker

env:
  MNT_DIR: "${MNT_DIR:-../../.mnt}"
  SERVICE_NAME: "influxdb"

inventories:
  - ./prod-inventory.yaml
  - ./test-inventory.yaml

tasks:
  up:before:
    desc: "Scaffold influxdb config dir into .mnt"
    uses: bash
    run: |
      mkdir -p ${MNT_DIR}/data/influxdb
      mkdir -p ${MNT_DIR}/config/influxdb
