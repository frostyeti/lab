# ── Proxy selection ─────────────────────────────────────────────────────────
TRAEFIK_ENABLE=false
CADDY_ENABLE=false

GITEA_HOST=git.local
GITEA_HTTP_PORT=3000
GITEA_SSH_PORT=2222
PUID=1000
PGID=1000
GITEA_DB_HOST=postgres
GITEA_DB_NAME=gitea
GITEA_DB_USER=gitea
GITEA_DISABLE_REGISTRATION=false
# Secret — generated and stored in kpv on first use
GITEA_DB_PASSWORD="$(kpv --vault homelab secrets ensure --key default/gitea-db-password --size 32 -S)"
