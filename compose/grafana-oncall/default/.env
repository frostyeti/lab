# ── Proxy selection ─────────────────────────────────────────────────────────
TRAEFIK_ENABLE=false
CADDY_ENABLE=false

ONCALL_HOST=oncall.local
ONCALL_PORT=8080
ONCALL_BASE_URL=http://oncall.local
GRAFANA_API_URL=http://grafana:3000
ONCALL_DB_NAME=oncall
ONCALL_DB_USER=oncall
# Secrets — generated and stored in kpv on first use
ONCALL_DB_PASSWORD="$(kpv --vault homelab secrets ensure --key default/oncall-db-password --size 32 -S)"
ONCALL_SECRET_KEY="$(kpv --vault homelab secrets ensure --key default/oncall-secret-key --size 64 -S)"
