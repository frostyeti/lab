imports:
  - docker

env:
  MNT_DIR: "${MNT_DIR:-../../.mnt}"
  SERVICE_NAME: "prometheus"

inventories:
  - ./prod-inventory.yaml
  - ./test-inventory.yaml

tasks:
  up:before:
    desc: "Scaffold prometheus dirs"
    uses: bash
    run: |
      mkdir -p ${MNT_DIR}/data/prometheus
      mkdir -p ${MNT_DIR}/etc/prometheus
      if [ ! -f "${MNT_DIR}/etc/prometheus/prometheus.yml" ]; then
        cp ./default/etc/prometheus.yml ${MNT_DIR}/etc/prometheus/prometheus.yml
        echo "Copied prometheus.yml"
      fi
