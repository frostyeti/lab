services:
  immich:
    image: ${IMAGE_NAME:-ghcr.io/immich-app/immich-server}:${TAG:-latest}
    container_name: immich
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    environment:
      - TZ=UTC
    ports:
      - "2283:2283"
    volumes:
      - ${MNT_DIR}/data/immich:/data
      - ${MNT_DIR}/config/immich:/config
    networks:
      - vnet-frontend
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
  vnet-backend:
    external: true
