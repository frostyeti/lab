# ── Proxy selection ─────────────────────────────────────────────────────────
TRAEFIK_ENABLE=false
CADDY_ENABLE=false

DEFGUARD_HOST=defguard.local
DEFGUARD_PORT=8000
DEFGUARD_URL=http://defguard.local
DEFGUARD_DB_NAME=defguard
DEFGUARD_DB_USER=defguard
DEFGUARD_USERSPACE=false
# Secrets — generated and stored in kpv on first use
DEFGUARD_DB_PASSWORD="$(kpv --vault homelab secrets ensure --key default/defguard-db-password --size 32 -S)"
DEFGUARD_SECRET_KEY="$(kpv --vault homelab secrets ensure --key default/defguard-secret-key --size 64 -S)"
# Gateway token — set after first defguard startup: Settings → Gateway → copy token
DEFGUARD_GATEWAY_TOKEN="$(kpv --vault homelab secrets ensure --key default/defguard-gateway-token --size 0 2>/dev/null || echo '')"
