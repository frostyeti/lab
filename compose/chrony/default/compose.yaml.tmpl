services:
  chrony:
    image: ${IMAGE_NAME:-cturra/ntp}:${TAG:-latest}
    container_name: chrony
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    environment:
      - TZ=UTC
    ports:
      - "123:123/udp"
    volumes:
      - ${MNT_DIR}/data/chrony:/data
      - ${MNT_DIR}/config/chrony:/config
    networks:
      - vnet-frontend
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
  vnet-backend:
    external: true
