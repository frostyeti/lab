services:
  coredns:
    image: coredns/coredns:${TAG:-latest}
    container_name: coredns
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    ports:
      - "53:53/udp"
      - "53:53/tcp"
    volumes:
      - ${MNT_DIR}/etc/coredns:/etc/coredns
    command: ["-conf", "/etc/coredns/Corefile"]
    networks:
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-backend:
    external: true
