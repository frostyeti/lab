services:
  watchtower:
    image: ${IMAGE_NAME:-nicholas-fedor/watchtower}:${TAG:-latest}
    container_name: watchtower
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    environment:
      - TZ=UTC
    command: ["--interval", "86400"]
    volumes:
      - ${MNT_DIR}/data/watchtower:/data
      - ${MNT_DIR}/config/watchtower:/config
      - "/var/run/docker.sock:/var/run/docker.sock"
    networks:
      - vnet-frontend
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
  vnet-backend:
    external: true
