services:
  bind9:
    image: ${IMAGE_NAME:-ubuntu/bind9}:${TAG:-latest}
    container_name: bind9
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    environment:
      - TZ=UTC
    ports:
      - "53:53/udp"
      - "53:53/tcp"
    volumes:
      - ${MNT_DIR}/data/bind9:/data
      - ${MNT_DIR}/config/bind9:/config
    healthcheck:
      test: ["CMD", "rndc", "status"]
      interval: 30s
      timeout: 10s
      retries: 3
    networks:
      - vnet-frontend
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
  vnet-backend:
    external: true
