services:
  code-server:
    image: lscr.io/linuxserver/code-server:${TAG:-latest}
    container_name: code-server
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    ports:
      - "${CODE_SERVER_PORT:-8443}:8443"
    environment:
      PUID: ${PUID:-1000}
      PGID: ${PGID:-1000}
      TZ: ${TZ:-UTC}
      PASSWORD: ${CODE_SERVER_PASSWORD:-changeme}
      SUDO_PASSWORD: ${CODE_SERVER_SUDO_PASSWORD:-changeme}
      DEFAULT_WORKSPACE: /workspace
    volumes:
      - ${MNT_DIR}/etc/code-server:/config
      - ${MNT_DIR}/data/code-server:/workspace
    healthcheck:
      test: ["CMD", "curl", "-s", "http://127.0.0.1:8443/healthz"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 30s
    labels:
      traefik.enable: "${TRAEFIK_ENABLE:-false}"
      traefik.http.routers.code-server.rule: "Host(`${CODE_SERVER_HOST:-code.local}`)"
      traefik.http.routers.code-server.entrypoints: "websecure"
      traefik.http.routers.code-server.tls: "true"
      traefik.http.routers.code-server.tls.certresolver: "letsencrypt"
      traefik.http.services.code-server.loadbalancer.server.port: "8443"
      traefik.http.services.code-server.loadbalancer.healthcheck.path: "/healthz"
      caddy: "${CADDY_ENABLE:-false}"
      caddy.reverse_proxy: "{{upstreams 8443}}"
    networks:
      - vnet-frontend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
