services:
  authentik:
    image: ${IMAGE_NAME:-ghcr.io/goauthentik/server}:${TAG:-latest}
    container_name: authentik
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    environment:
      - TZ=UTC
    ports:
      - "9000:9000"
    volumes:
      - ${MNT_DIR}/data/authentik:/data
      - ${MNT_DIR}/config/authentik:/config
    networks:
      - vnet-frontend
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
  vnet-backend:
    external: true
