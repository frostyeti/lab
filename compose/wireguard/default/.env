# ── Proxy selection ─────────────────────────────────────────────────────────
TRAEFIK_ENABLE=false
CADDY_ENABLE=false

WG_UI_HOST=wg.local
WG_HOST=vpn.local
WG_UI_PORT=51821
WG_DNS=1.1.1.1
# WG_PASSWORD_HASH: generate with: docker run --rm ghcr.io/wg-easy/wg-easy wgpw YOUR_PASSWORD
# Store the bcrypt hash in kpv: kpv --vault homelab secrets set --key default/wireguard-password-hash --stdin
WG_PASSWORD_HASH="$(kpv --vault homelab secrets ensure --key default/wireguard-password-hash --size 0 2>/dev/null || echo '')"
