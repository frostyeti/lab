services:
  cloudbeaver:
    image: ${IMAGE_NAME:-dbeaver/cloudbeaver}:${TAG:-latest}
    container_name: cloudbeaver
    {{- if ne .env.DEPLOY_MODE "swarm" }}
    restart: unless-stopped
    {{- end }}
    environment:
      - TZ=UTC
    ports:
      - "8978:8978"
    volumes:
      - ${MNT_DIR}/data/cloudbeaver:/data
      - ${MNT_DIR}/config/cloudbeaver:/config
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8978/"]
      interval: 30s
      timeout: 10s
      retries: 5
    networks:
      - vnet-frontend
      - vnet-backend
    {{- if eq .env.DEPLOY_MODE "swarm" }}
    deploy:
      mode: replicated
      replicas: {{ default "1" .data.replicas }}
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    {{- end }}

networks:
  vnet-frontend:
    external: true
  vnet-backend:
    external: true
